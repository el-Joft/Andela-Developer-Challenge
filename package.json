{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint server/src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "lint:ui": "eslint ui/src/**/*.js",
    "clean": "rimraf server/build/ && rimraf ui/dist/",
    "build-babel": "babel server/src -d server/build/src",
    "build": "npm run clean && npm run build-babel && npm run webpack:build",
    "start": "npm run build && node --require dotenv/config ./server/bin/server",
    "test": "cross-env NODE_ENV=test nyc mocha \"server/src/test/**/*.js\"",
    "webpack:build": "webpack",
    "coverage": "npm run coveralls:coverage && npm run sonar:coverage",
    "coveralls:coverage": "nyc report --reporter=text-lcov | coveralls",
    "sonar:coverage": "cross-var sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SONAR_CLOUD_TOKEN",
    "echo:test": "cross-var echo $SONAR_CLOUD_TOKEN"
  },
  "dependencies": {
    "ant-pattern-matcher": "0.0.4",
    "bcryptjs": "^2.4.3",
    "bluebird": "~3.5.1",
    "chai": "^3.5.0",
    "chai-http": "^4.0.0",
    "cors": "^2.8.4",
    "debug": "~2.6.9",
    "dotenv": "^6.0.0",
    "express": "~4.16.0",
    "has": "^1.0.3",
    "http-errors": "~1.6.2",
    "jsonwebtoken": "^8.3.0",
    "morgan": "~1.9.0",
    "pg-promise": "^8.4.5",
    "randomstring": "^1.1.5",
    "rimraf": "^2.6.2",
    "swagger-ui-dist": "^3.17.6",
    "validator": "^10.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-airbnb": "^2.5.1",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cross-var": "^1.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "nyc": {
    "require": [
      "babel-register",
      "dotenv/config"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
